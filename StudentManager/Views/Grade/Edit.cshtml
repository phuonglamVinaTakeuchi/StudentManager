@{
	ViewData["Title"] = "Create New Grade";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model GradeViewModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.13/dist/semantic.min.css">

<div class="text-center">
	<h1 class="display-4"> Edit Grade</h1>
</div>

<div class="row g-5">
	<div class="col-md-7 col-lg-8">
		@using (Html.BeginForm("Edit", "Grade"))
		{
			@Html.HiddenFor(h => h.Grade.Id)
			@Html.HiddenFor(h=>h.Students)
			@Html.HiddenFor(h=>h.Grade.Students)
			<div class="row g-3">
				<div class="col-sm-6">
					<label asp-for="@Model.Grade.Name" class="form-label"></label>
					<input asp-for="@Model.Grade.Name" class="form-control" autocomplete="" aria-required="true">
					<span asp-validation-for="@Model.Grade.Name" class="text-danger"></span>
				</div>

				<div class="col-sm-6">
					<label asp-for="@Model.Grade.Description" class="form-label"></label>
					<input asp-for="@Model.Grade.Description" class="form-control" autocomplete="" aria-required="true">
					<span asp-validation-for="@Model.Grade.Description" class="text-danger"></span>
				</div>

			</div>
			<hr class="my-4">

			<h4 class="mb-3">Student List</h4>
			@if (Model.Grade.Students !=null)
			{
				<div class="col-sm-6">
					<label asp-for="@Model.Grade.Students" class="form-label"></label>
					@Html.ListBoxFor(m => m.StudentIds, Model.Students, new { id = "StudentList", @class = "selectStudent show-tick form-control input-md" })
				</div>
			}

			<hr class="my-4">

			<button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
		}
	</div>
	@*<a asp-controller="" asp-action="Index">Back</a>*@
</div>

@section Scripts
	{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/i18n/defaults-*.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.13/dist/semantic.min.js"></script>
}
