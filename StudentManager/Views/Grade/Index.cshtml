@{
	ViewData["Title"] = "Grade List Page";
}

@model IEnumerable<StudentManager.Core.Data.Grade>

<div class="text-center">
	<h1 class="display-4"> Grade List View</h1>

	<table class="table">
		<thead>
			<tr>
				@*<th scope="col">#</th>*@
				<th scope="col">Name</th>
				<th scope="col">Description</th>
				<th scope="col">Students List</th>
				<th scope="col">Edit</th>
				<th scope="col">Delete</th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Any())
			{
				@foreach (var grade in Model)
				{
					<tr>
						@*@Html.HiddenFor(h=>grade.Id);*@
						@*<th scope="row">@grade.Id</th>*@
						<td>@grade.Name</td>
						<td>@grade.Description</td>
						<td>
							@if (@grade.Students != null)
							{
								if (@grade.Students.Count < 3)
								{
									foreach (var student in grade.Students)
									{
										<a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">@student.Name</a>
									}
								}
								else
								{
									<span>@grade.Students.Count</span>
								}

							}
						</td>
						<td>
							<a aso-controller="Grade" asp-action="Edit" asp-route-id="@grade.Id">Edit</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>

</div>