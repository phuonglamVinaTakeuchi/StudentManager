@{
	ViewData["Title"] = "Create New Student";
}
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using StudentManager.Core.Data
@model StudentViewModel

<div class="text-center">
	<h1 class="display-4"> Create New Student</h1>
</div>

<div class="row g-5">
	<div class="col-md-7 col-lg-8">
		@using (Html.BeginForm("Create", "Student"))
		{
			@Html.HiddenFor(h => Model.Student.Id)
			<div class="row g-3">
				<div class="col-sm-6">
					<label asp-for="Student.Name" class="form-label"></label>
					<input asp-for="Student.Name" class="form-control" autocomplete="" aria-required="true">
					<span asp-validation-for="Student.Name" class="text-danger"></span>
				</div>

				<div class="col-sm-6">
					<label asp-for="Student.Email" class="form-label"></label>
					<input asp-for="Student.Email" class="form-control" autocomplete="" aria-required="true">
					<span asp-validation-for="Student.Email" class="text-danger"></span>
				</div>
				
				<div class="col-sm-6">
					<label asp-for="Student.Address" class="form-label"></label>
					<input asp-for="Student.Address" class="form-control" autocomplete="" aria-required="true">
					<span asp-validation-for="Student.Address" class="text-danger"></span>
				</div>

			</div>
			<hr class="my-4">

			<h4 class="mb-3">Grade List</h4>
			@if (Model.Student.Grades !=null)
			{
				<div class="col-sm-6">
					<label asp-for="Student.Grades" class="form-label"></label>
					<input asp-for="Student.Grades" class="form-control" autocomplete="" aria-required="true">
					<span asp-validation-for="Student.Grades" class="text-danger"></span>
				</div>

				@*<div class="my-3">
					@for (var i = 0; i < Model.Grade.Students.Count; i++)
					{

					}
				</div>*@
			}

			<hr class="my-4">

			<button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
		}
	</div>
	@*<a asp-controller="User" asp-action="Index">Back</a>*@
</div>
